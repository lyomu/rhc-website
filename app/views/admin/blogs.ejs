<%- include("../_partials/_adminheader.ejs") %>

<!-- [ breadcrumb ] start -->

<div class="page-header">
  <div class="page-block">
    <div class="row align-items-center">
      <div class="col-md-12">
        <div class="page-header-title">
          <h5 class="m-b-10">Blogs</h5>
        </div>
        <ul class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/"><i class="feather icon-home"></i></a>
          </li>
          <li class="breadcrumb-item">
            <a href="javascript:">Blogs</a>
          </li>
          <li class="breadcrumb-item">
            <a href="javascript:">All</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- [ breadcrumb ] end -->
<div class="main-body">
  <div class="page-wrapper">
    <div class="d-md-flex">
      <a href="/admin/blogs/new" class="btn btn-primary" style="width: 200px">
        Create New Blog</a
      >
      <button
        class="btn btn-warning text-white"
        style="width: 200px"
        data-toggle="modal"
        data-target="#categoryModal"
      >
        Create Blog Category
      </button>
    </div>

    <%- include("./blogcategories.ejs") %> <% blogs.forEach(blog => { %>
    <div class="card">
      <div class="card-header">
        <h3 class="text-bold"><%= blog.blog_title %></h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 col-sm-12">
            <img
              class="w-100"
              src="/uploads/images/<%= blog.blog_image %>"
              alt="Blog image"
            />
          </div>

          <div class="col-md-6 col-sm-12">
            <h6 class="my-1">
              Written by:
              <span class="text-muted"><%= blog.Writer?.writer_fullname%></span>
            </h6>
            <h6 class="my-1">
              Posted on: <span class="text-muted"><%= blog.createdAt %></span>
            </h6>
            <h6 class="my-1">
              Category:
              <span class="text-muted" style="color: red;"><%= blog.Blogcategory?.category_name %></span>
            </h6>
            <hr />
            <div>
              <h6 class="my-1">Description:</h6>
              <%- blog.blog_description %>
            </div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a class="btn btn-secondary" href="/admin/blogs/view/<%= blog.id %>"
          >View Blog</a
        >
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include("../_partials/_adminfooter.ejs") %>
