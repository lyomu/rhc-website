<%- include("../_partials/_adminheader.ejs") %>

<!-- [ breadcrumb ] start -->

<div class="page-header">
  <div class="page-block">
    <div class="row align-items-center">
      <div class="col-md-12">
        <div class="page-header-title">
          <h5 class="m-b-10">Writers</h5>
        </div>
        <ul class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/"><i class="feather icon-home"></i></a>
          </li>
          <li class="breadcrumb-item">
            <a href="javascript:">Writers</a>
          </li>
          <li class="breadcrumb-item">
            <a href="javascript:">All</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- [ breadcrumb ] end -->
<div class="main-body">
  <div class="page-wrapper">
    <div class="d-md-flex">
      <a href="/admin/writers/new" class="btn btn-primary" style="width: 200px">
        Create New Writer</a
      >
    </div>
    <% writers.forEach(writer => { %>
    <div class="card">
      <div class="card-header">
        <h3 class="text-bold"><%= writer.writer_fullname %></h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 col-sm-12 px-5">
            <img
              style="
                vertical-align: middle;
                width: 200px;
                height: 200px;
                border-radius: 50%;
                margin-left: auto;
                margin-right: auto;
              "
              src="/uploads/images/<%= writer.writer_image %>"
              alt="Writer image"
            />
          </div>

          <div class="col-md-6 col-sm-12">
            <h6 class="my-1">
              Email:
              <span class="text-muted"><%= writer.writer_email %></span>
            </h6>

            <div><%- writer.writer_description %></div>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <a class="btn btn-secondary" href="/admin/writers/edit/<%= writer.id %>"
          >Update</a
        >
        <form
          action="/admin/writers/delete/<%= writer.id %>?_method=DELETE"
          onsubmit="return confirm('Do you really want to delete this author');"
          method="post"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include("../_partials/_adminfooter.ejs") %>
