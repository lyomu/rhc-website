<script src="/plugins/ckeditor/ckeditor.js"></script>

<div class="row">
  <div class="form-group col-12">
    <label>Event Name <sup style="color: red">*</sup></label>
    <input
      type="text"
      class="form-control"
      name="event_name"
      value="<%= event.event_name%>"
      placeholder="Event name"
      required
    />
  </div>
</div>
<div class="row">
  <div class="form-group col-md-6 col-sm-12">
    <label>Event Location <sup style="color: red">*</sup></label>
    <input
      type="text"
      class="form-control"
      name="event_location"
      value="<%= event.event_location %>"
      placeholder="Event location"
      required
    />
  </div>
  <div class="form-group col-md-6 col-sm-12">
    <label
      >Event Poster <% if (!event.event_poster) { %>
      <sup style="color: red">*</sup>
      <% } %></label
    >
    <% if (event.event_poster ) { %>
    <input
      type="file"
      id="image-inputimage-input"
      class="form-control-file"
      accept="image/*"
      name="event_poster"
      placeholder="Event poster"
    />
    <% } else{ %>
    <input
      type="file"
      id="image-input"
      class="form-control-file"
      accept="image/*"
      name="event_poster"
      placeholder="Event poster"
      required
    />
    <% } %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-sm-12">
    <div class="form-group">
      <label>Event Date<sup style="color: red">*</sup></label>
      <input
        type="date"
        class="form-control"
        name="event_date"
        value="<%= new Date(event.event_date).getFullYear() +'-'+ ('0'+ (new Date(event.event_date).getMonth()+1)).slice(-2)+'-'+('0'+ new Date(event.event_date).getDate()).slice(-2) %>"
        placeholder="Event date"
        required
      />
    </div>
    <div class="form-group">
      <label>Event Start Time<sup style="color: red">*</sup></label>
      <input
        type="time"
        class="form-control"
        name="event_starttime"
        value="<%= event.event_starttime %>"
        placeholder="Event Start Time"
        required
      />
    </div>
  </div>
  <div class="form-group col-md-6 col-sm-12">
    <label>Event Description</label>
    <textarea
      id="editor"
      class="form-control ck-content"
      name="event_description"
    >
<%- event.event_description %></textarea
    >
  </div>
</div>

<div class="d-inline">
  <input type="submit" value="Submit" class="btn btn-primary" />
  <a href="/admin/events" class="btn btn-danger">Cancel</a>
</div>

<script>
  ClassicEditor.create(document.querySelector("#editor"),{
    toolbar: [
      "heading",
      "|",
      "bold",
      "italic",
      "link",
      "|",
      "blockQuote",
      "mediaEmbed",
      "insertTable",
      "|",
      "bulletedList",
      "numberedList",
      "outdent",
      "indent",
      "|",
      "undo",
      "redo",
    ],
  }).catch((error) => {
    return;
  });
</script>
